        "sinon": "^5.0.7",
        "eslint": "^4.19.1",
        "prettier": "^1.12.1",
        "proxyquire": "^2.0.1",
        "babel-eslint": "^8.2.3",
        "prettier-eslint": "^8.8.1",
        "babel-polyfill": "^6.26.0",
        "eslint-plugin-node": "^6.0.1",
        "mongodb-memory-server": "^1.7.4",
        "eslint-plugin-promise": "^3.7.0",
        "eslint-plugin-import": "^2.12.0",
        "eslint-plugin-prettier": "^2.6.0",
